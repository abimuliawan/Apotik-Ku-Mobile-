<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apotekku">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SaldoPerObatActivity"></activity>
        <activity android:name=".EditObatActivity" />
        <activity android:name=".LapPenjualanActivity" />
        <activity android:name=".LapPembelianActivity" />
        <activity android:name=".TrackingActivity" />
        <activity android:name=".PegawaiActivity" />

        <meta-data
            android:name="DATABASE"
            android:value="ast-examplea.db" />
        <meta-data
            android:name="VERSION"
            android:value="2.0" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="TRUE" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example.apotekku" />

        <activity android:name=".RegisterEmployeeActivity" />
        <activity android:name=".SaldoObatActivity" />
        <activity android:name=".ListTransactionActivity" />
        <activity android:name=".TransaksiObatActivity" />
        <activity android:name=".TambahStokObatActivity" />
        <activity android:name=".TambahObatActivity" />
        <activity
            android:name=".ShowObatActivity"
            android:theme="@style/EditorTheme" />
        <activity android:name=".MenuUtamaActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>