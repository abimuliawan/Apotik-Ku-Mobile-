<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama_obat_riwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Nama Obat"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/harga_satuan_riwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Harga Satuan: Rp. 1000"
                    android:textColor="#037c05"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/jumlah_obat_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Stok"
                    android:textColor="#228B22"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tanggal_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="2020-06-12"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/total_harga_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Total : Rp. 10.000"
                    android:textColor="#228B22"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>